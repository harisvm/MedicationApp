<?xml version="1.0" encoding="utf-8"?><FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    tools:context=".AnimationAlarm">    <ImageView        android:id="@+id/alarm"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:background="@color/white"        android:onClick="stopAlarm"        android:src="@drawable/alarmtwo" />    <TextView        android:id="@+id/textanim"        android:layout_width="match_parent"        android:layout_height="50dp"        android:layout_gravity="bottom"        android:layout_marginBottom="30dp"        android:gravity="center_horizontal"        android:text="CLICK TO STOP"        android:textColor="@color/colorAccent"        android:textStyle="bold"        /></FrameLayout>